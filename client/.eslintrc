{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "client/tsconfig.json"
  },
  "plugins": ["react", "@typescript-eslint"],
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"],
    "@typescript-eslint/no-empty-function": 0
  }
}
